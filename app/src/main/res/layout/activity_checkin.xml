<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.CheckinActivity">

    <TextView
        android:id="@+id/painManagementText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Pain Management"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/chartImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/painManagementText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/painLevelQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chartImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="What is your pain level today?"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/sliderLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/painLevelQuestionText"
        android:layout_centerHorizontal="true">

        <com.google.android.material.slider.Slider
            android:id="@+id/painSlider"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:stepSize="1"
            android:value="5"
            android:valueFrom="0"
            android:valueTo="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="5/10"
            android:id="@+id/painLevelRatingText"
            android:textSize="20sp" />
    </LinearLayout>


    <Button
        android:id="@+id/bodyDiagramButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sliderLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Body diagram" />

    <Button
        android:id="@+id/medicationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bodyDiagramButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Medication" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medicationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Life record" />

</RelativeLayout>