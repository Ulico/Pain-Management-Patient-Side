<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activites.AddMedicationActivity">

    <TextView
        android:id="@+id/medicineText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Name of medicine"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/medicineInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="20dp"
        android:autofillHints="name"
        android:hint="Type something..."
        android:inputType="text" />

    <TextView
        android:id="@+id/doseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Dose"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/doseInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="20dp"
        android:autofillHints="name"
        android:hint="Type something..."
        android:inputType="text" />

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Instruction"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/instructionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="20dp"
        android:autofillHints="name"
        android:hint="Type something..."
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:text="Submit"
        android:layout_marginTop="50dp"
        android:onClick="onSubmit"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

</LinearLayout>