<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activites.DailyLog"
    tools:showIn="@layout/activity_daily_log">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/painLevelQuestionText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="100dp"
                android:text="@string/what_is_your_pain_level"
                android:textSize="18sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/painSlider"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/painLevelQuestionText"
                android:stepSize="1"
                android:value="5"
                android:valueFrom="0"
                android:valueTo="10" />

            <TextView
                android:id="@+id/painText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="@string/_5_10"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/highestPainLocationText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Where is your highest pain located?"
                android:textSize="18sp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/highestPainLocationText"
                android:layout_marginTop="10dp"
                android:text="Click to see body diagram" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/secondHighestPainLocationText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Where is your second highest pain located?"
                android:textSize="18sp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/secondHighestPainLocationText"
                android:layout_marginTop="10dp"
                android:text="Click to see body diagram" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/thirdHighestPainLocationText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Where is your third highest pain located?"
                android:textSize="18sp" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thirdHighestPainLocationText"
                android:layout_marginTop="10dp"
                android:text="Click to see body diagram" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/describePainText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="How would you describe you pain?"
                android:textSize="18sp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/describePainText"
                android:tooltipText="" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/triggeredPainText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="What triggered your pain?"
                android:textSize="18sp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/triggeredPainText"
                android:tooltipText="" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/feelText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="100dp"
                android:text="How much do you feel the pain has interfered with your enjoyment of life?"
                android:textSize="18sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/feelSlider"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/feelText"
                android:stepSize="1"
                android:value="5"
                android:valueFrom="0"
                android:valueTo="10" />

            <TextView
                android:id="@+id/feelScoreText"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="@string/_5_10"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/feelText2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="100dp"
                android:text="How much do you feel the pain has interfered with your general activity?"
                android:textSize="18sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/feelSlider2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/feelText2"
                android:stepSize="1"
                android:value="5"
                android:valueFrom="0"
                android:valueTo="10" />

            <TextView
                android:id="@+id/feelScoreText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="@string/_5_10"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/treatmentsText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="What treatment(s) have you tried today?"
                android:textSize="18sp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/treatmentsText"
                android:tooltipText="" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/activitesText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="What activity(s) have you tried today?"
                android:textSize="18sp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activitesText"
                android:tooltipText="" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/additionalNotesText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="What activity(s) have you tried today?"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/additionalNotesText"
                android:layout_marginTop="10dp"
                android:autofillHints="name"
                android:hint="Type something..."
                android:inputType="text" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/submit"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onSubmit"
                android:text="Submit" />
        </RelativeLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>